{
    "name": "AI & Misinformation Detector",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Detects AI-generated images and potential misinformation text in images on webpages.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "css": ["overlay.css"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [{
      "resources": ["overlay.css"],
      "matches": ["<all_urls>"]
    }],
    "action": {
      "default_title": "AI Detector",
      "default_popup": "popup.html",
      "default_icon": "AI_Detector_Chrome_Extension_Logo.png"
    }
  }
  